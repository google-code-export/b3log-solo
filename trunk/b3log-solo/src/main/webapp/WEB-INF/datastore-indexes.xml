<datastore-indexes autoGenerate="true">
    <datastore-index kind="tag">
        <property name="oId"/>
        <property name="tagReferenceCount"/>
        <property name="tagTitle"/>
    </datastore-index>

    <datastore-index kind="statistic">
        <property name="oId"/>
        <property name="statisticBlogArticleCount"/>
        <property name="statisticBlogCommentCount"/>
        <property name="statisticBlogViewCount"/>
    </datastore-index>

    <datastore-index kind="comment">
        <property name="oId"/>
        <property name="commentContent"/>
        <property name="commentDate"/>
        <property name="commentEmail"/>
        <property name="commentName"/>
        <property name="commentSharpURL"/>
        <property name="commentThumbnailURL"/>
        <property name="commentURL"/>
    </datastore-index>
</datastore-indexes>